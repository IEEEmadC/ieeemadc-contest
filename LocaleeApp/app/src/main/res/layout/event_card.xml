<?xml version="1.0" encoding="utf-8" ?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/event_card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="16dp">

        <ImageView
            android:id="@+id/event_image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/image_card_height"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/event_distance"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/event_image"
            android:layout_alignEnd="@+id/event_image"
            android:background="@color/cardview_dark_background"
            android:padding="8dp"
            android:text="Distance"
            android:textColor="@color/cardview_light_background"
            android:textSize="18sp" />

        <!-- This goes left-->
        <TextView
            android:id="@+id/event_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/event_image"
            android:text="Date"
            android:textSize="30sp" />

        <!-- This goes right-->
        <ImageView
            android:id="@+id/share_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="16dp"
            android:background="@drawable/ic_share_black_24dp"
            android:layout_below="@id/event_image"
            android:layout_alignParentEnd="true" />

        <View
            android:id="@+id/left_divider"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_below="@id/event_image"
            android:layout_margin="8dp"
            android:layout_toRightOf="@id/event_date" />

        <View
            android:id="@+id/right_divider"
            android:layout_width="2dp"
            android:layout_height="50dp"
            android:layout_below="@id/event_image"
            android:layout_margin="8dp"
            android:layout_toLeftOf="@id/share_icon" />

        <TextView
            android:id="@+id/event_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_image"
            android:layout_toLeftOf="@id/right_divider"
            android:layout_toRightOf="@+id/left_divider"
            android:text="Event Name"
            android:layout_marginBottom="16dp"
            android:textSize="24sp" />

        <ImageView
            android:id="@+id/place_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/event_name"
            android:layout_toRightOf="@id/left_divider"
            android:background="@drawable/ic_place_black_24dp" />

        <TextView
            android:id="@+id/event_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/place_icon"
            android:layout_toLeftOf="@id/right_divider"
            android:layout_toEndOf="@+id/place_icon"
            android:text="Event address" />
    </RelativeLayout>

</android.support.v7.widget.CardView>